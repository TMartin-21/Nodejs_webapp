<%- include('header') -%>

<div class="container">
    <div class="row">
        <h1>Add new agency</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <form class="medium", method="POST">
                <div class="form-group">
                    <label for="agencyName">Agency Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="">
                </div>
                <div class="form-group">
                    <label for="headquarter">Headquarter</label>
                    <input type="text" class="form-control" id="headquarter" name="headquarters">
                </div>
                <div class="form-outline">
                    <label class="form-label" for="coworkers">Number of coworkers</label>
                    <input min="1" max="10000" type="number" id="numberOfCoworkers" name="numberOfCoworkers" class="form-controll">
                </div>
                <div class="row justify-content-center">
                    <div class="col-6 text-center">
                        <input type="submit" class="btn btn-primary btn-lg" href="/agency" value="Save"/>
                    </div>
                    <div class="col-6 text-center">
                        <a class="btn btn-danger btn-lg" href="/agency">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>      
        
<%- include('footer') -%>